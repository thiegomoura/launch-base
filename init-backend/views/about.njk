{% extends "layout.njk" %}
<title>Sobre - Thiego Moura</title>
{% block content %}

    <div id="wrapper">
        <img src="{{about.avatar_url}}" alt="Image de {{about.name}}">
        <h1>{{about.name}}</h1>
        <h2>{{about.role}}</h2>
        <p>{{about.description}}</p>
    </div>
    <div id="links-footer" class="links">
        {% for link in about.links %}
        <a href="{{link.url}}" target="_blank">{{link.name}}</a>
        {% endfor %}
    </div>

{% endblock %}