{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="POST" action="/instructors">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/10079188/500x500) no-repeat center center / cover"></section>
        <section class="details">
            <h3>New Instructor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>
            <div class="item">
                <div>Instructor</div>
                <div>
                    <input type="text" name="name"
                    placeholder="Instructor name">
                </div>
            </div>
            <div class="item">
                <div>Birth</div>
                <div><input type="date" name="birth"></div>
            </div>
            <div class="item">
                <div>Sexo</div>
                <span>
                    <input type="radio" name="gender" value="M" checked="checked">
                    Masculino
                    <input type="radio" name="gender" value="F">
                    Feminino
                </span>
            </div>
            <div class="item">
                <div>Atuation</div>
                <div>
                    <input type="text" name="services"
                    placeholder="Separate the services provided by a comma (,)">
                </div>
            </div>
            <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}