<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ instructor.avatar_url }}">
    </div>
</div>
<div class="item">
    <div>Instructor</div>
    <div>
        <input type="text" name="name" placeholder="Instructor name" value="{{ instructor.name }}">
    </div>
</div>
<div class="item">
    <div>Birth</div>
    <div><input type="date" name="birth" value="{{ instructor.birth }}"></div>
</div>
<div class="item">
    <div>Sexo</div>
    <span>
        <input type="radio" name="gender" value="M" {% if instructor.gender == 'M' %} checked {% endif %}>
        Masculino
        <input type="radio" name="gender" value="F" {% if instructor.gender == 'F' %} checked {% endif %}>
        Feminino
    </span>
</div>
<div class="item">
    <div>Atuation</div>
    <div>
        <input type="text" name="services" placeholder="Separate the services provided by a comma (,)"
        value="{{ instructor.services }}">
    </div>
</div>
<button type="submit">Salvar</button>