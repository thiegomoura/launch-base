<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ member.avatar_url }}">
    </div>
</div>
<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" value="{{ member.name }}">
    </div>
</div>
<div class="item">
    <div>Email</div>
    <div>
        <input type="text" name="email" value="{{ member.email }}">
    </div>
</div>
<div class="item">
    <div>Birth</div>
    <div><input type="date" name="birth" value="{{ member.birth }}"></div>
</div>
<div class="item">
    <div>Sexo</div>
    <span>
        <input type="radio" name="gender" value="M" {% if member.gender == 'M' %} checked="checked" {% endif %}>
        Masculino
        <input type="radio" name="gender" value="F" {% if member.gender == 'F' %} checked="checked" {% endif %}>
        Feminino
    </span>
</div>

<div class="item">
    <div>Blood type</div>
    <div>
        <select name="blood">
            <option value="A1" {% if member.blood == "A1" %} select="select" {% endif %}>A+</option>
            <option value="A0" {% if member.blood == "A0" %} select="select" {% endif %}>A-</option>
            <option value="B1" {% if member.blood == "B1" %} select="select" {% endif %}>B+</option>
            <option value="B0" {% if member.blood == "B0" %} select="select" {% endif %}>B-</option>
            <option value="AB1" {% if member.blood == "AB1" %} select="select" {% endif %}>AB+</option>
            <option value="AB0" {% if member.blood == "AB0" %} select="select" {% endif %}>AB-</option>
            <option value="O1" {% if member.blood == "O1" %} select="select" {% endif %}>O+</option>
            <option value="O0" {% if member.blood == "O0" %} select="select" {% endif %}>O-</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Weigth (kg)</div>
    <div><input type="number" name="weight" value="{{ member.weight }}"></div>
</div>
<div class="item">
    <div>Height (cm)</div>
    <div><input type="number" name="height" value="{{ member.height }}"></div>
</div>

<button type="submit">Salvar</button>